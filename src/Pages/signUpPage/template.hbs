{{#> AuthFormContainer}}
    <form action="#" class="form">
      {{> BaseHeader label='Регистрация'}}
      <div class="inputContainer">
          {{> AuthFormInput name='name' type='text' label='Имя'}}
          {{> AuthFormInput name='second_name' type='text' label='Фамилия'}}
          {{> AuthFormInput name='mail' type='mail' label='Почта'}}
          {{> AuthFormInput name='phone' type='phone' label='Телефон'}}
          {{> AuthFormInput name='login' type='login' label='Логин'}}
          {{> AuthFormInput name='password' type='password' label='Пароль'}}
          {{> AuthFormInput name='repeat_password' type='password' label='Пароль (ещё раз)'}}
      </div>
      <div class="form-footer">
        <button type="submit" class="submit-button">Зарегистрироваться</button>
        <button type="button" class="signIn-button">Войти</button>
      </div>
    </form>
{{/ AuthFormContainer}}